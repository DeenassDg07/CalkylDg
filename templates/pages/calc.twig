{% extends "base.twig" %}

{% block title %}Калькулятор - {{ parent() }}{% endblock %}

{% block content %}
    <div class="content">
        <div class="articles">
            <div class="calculator">
                <h1>Калькулятор</h1>
                <form method="POST" action="/operation">
                    <input type="number" name="num1" value="{{ num1 }}" required />
                    <select name="operator">
                        <option value="+" {% if operator == '+' %}selected{% endif %}>+</option>
                        <option value="-" {% if operator == '-' %}selected{% endif %}>-</option>
                        <option value="*" {% if operator == '*' %}selected{% endif %}>*</option>
                        <option value="/" {% if operator == '/' %}selected{% endif %}>/</option>
                    </select>
                    <input type="number" name="num2" value="{{ num2 }}" required />
                    <button type="submit">Вычислить</button>
                </form>
                <h3>История операций</h3>
                {% if history is not empty %}
                    <pre>{{ history }}</pre>
                {% else %}
                    <p>История операций пуста.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}